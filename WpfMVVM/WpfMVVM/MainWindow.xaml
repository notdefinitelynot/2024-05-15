<Window x:Class="WpfMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Szinek"/>
        <StackPanel Grid.Row="1">
            <RadioButton Command="{Binding GreenViewCommand}" Content="Zöld"/>
            <RadioButton Command="{Binding YellowViewCommand}" Content="Sárga"/>
            <RadioButton Command="{Binding PinkViewCommand}" Content="Pink"/>
            <RadioButton Content="Kilépés"/>
        </StackPanel>
        <ContentControl Content="{Binding CurrentView}" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
